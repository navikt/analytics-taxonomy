{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "jsx": "react",
    "lib": ["DOM", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "esnext"
  },
  "include": ["dist/*.ts","dist/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*-spec.js",
    "**/*-test.js",
    "**/*.less"
  ]
}
