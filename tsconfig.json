{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "es2015", "es2016", "es2017","ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/esm",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "stripInternal": false,
    "target": "ES2015"
  },
  "include": ["build/*.ts","build/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*-spec.js",
    "**/*-test.js",
    "**/*.less"
  ]
}
